<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.kolin.fintechhomework3.ThirdFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/check_operation"
        android:textSize="24sp" />

    <RadioGroup
        android:id="@+id/fragment_third_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_btn_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUM ( + )" />

        <RadioButton
            android:id="@+id/radio_btn_diff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DIFF ( - )" />

        <RadioButton
            android:id="@+id/radio_btn_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DIV ( / )" />

        <RadioButton
            android:id="@+id/radio_btn_mult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MULT ( * )" />

    </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/fragment_third_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:text="OK"
        android:visibility="visible" />

</FrameLayout>
